{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run current file with cl.exe",
      "type": "shell",
      "command": "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Auxiliary\\Build\\vcvars64.bat\" && cl",
      "args": [
        "${file}",
        "&&",
        "${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}